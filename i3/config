# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  mode hide
  status_command ~/.config/conky/conky-i3bar
  workspace_buttons yes
  strip_workspace_numbers yes
  separator_symbol " "


  colors {
    background $background
    statusline $fg0
    separator  $darkorange

    focused_workspace  $darkorange     $darkorange     $black
    active_workspace   $background     $background     $fg0
    inactive_workspace $background     $background     $darkgrey
    urgent_workspace   $red            $red            $fg0
    binding_mode       #2f343a     #900000     #fdf6e3
  }
}

