conky.config = {
    uppercase = false,
    override_utf8_locale = true,
    default_color = '#ffffff',
    default_shade_color	= '#282828',
    default_outline_color = '#282828',

    alignment = 'top_left',
    xinerama_head = 1,
    gap_x = 35,
    gap_y = 35,

    out_to_console = false,
    out_to_ncurses = false,
    out_to_stderr = false,
    out_to_x = true,
    extra_newline = false,

    own_window = true,
    own_window_transparent = true,
    own_window_argb_visual = true,
    own_window_argb_value = 64,
    own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
    own_window_class = 'Conky',
    own_window_type = 'override',
    background = false,
    draw_blended = false,

    double_buffer = true,
    draw_shades = true,
    draw_outline = true,
    draw_borders = false,
    draw_graph_borders = false,

    no_buffers = true,
    use_xft = true,
    xftalpha = 0.1,
    cpu_avg_samples = 2,
    update_interval = 1,
    total_run_times = 0,
    imlib_cache_size = 0
}

conky.text = [[
${if_running spotify}${voffset 0}${goto 280}${font DejaVu Sans Monospace:Bold:size=30}${exec ~/Git/dotfiles/conky/spotify_getinfo.py song}
${voffset 0}${goto 280}${font DejaVuSans Monospace:size=28}${exec ~/Git/dotfiles/conky/spotify_getinfo.py artist} - ${exec ~/Git/dotfiles/conky/spotify_getinfo.py album}
# --- Get Spotify Cover ---
${if_running spotify}
  ${exec ~/Git/dotfiles/conky/spotify_getinfo.py make_cache}
${endif}
${image ~/.config/conky/cover.jpg -p 0,0 -s 256x256}
${voffset 100}${endif}
]]
