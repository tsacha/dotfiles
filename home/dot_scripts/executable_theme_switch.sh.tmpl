#!/bin/bash
cm="chezmoi -S ~/Git/dotfiles -c ~/Git/dotfiles/chezmoi.toml --persistent-state ~/.config/chezmoi/chezmoistate.boltdb"
{{ if not (eq .chezmoi.os "darwin") -}}
if [ $(gsettings get org.gnome.desktop.interface gtk-theme) == "'Adwaita'" ]; then
    gsettings set org.gnome.desktop.interface gtk-theme 'Adwaita-dark'
    gsettings set org.gnome.desktop.interface icon-theme 'Adwaita-dark'
elif [ $(gsettings get org.gnome.desktop.interface gtk-theme) == "'Adwaita-dark'" ]; then
    gsettings set org.gnome.desktop.interface gtk-theme 'Adwaita'
    gsettings set org.gnome.desktop.interface icon-theme 'Adwaita'
fi;
$cm apply --force ~/.config/alacritty/alacritty.toml ~/.config/rofi/config.rasi ~/.config/k9s/skin.yml ~/.vimrc.color ~/.config/tmux/tmux.conf
{{ else }}
osascript -e 'tell app "System Events" to tell appearance preferences to set dark mode to not dark mode'
$cm apply --force ~/.config/alacritty/alacritty.toml ~/.config/k9s/skin.yml ~/.vimrc.color ~/.config/kitty/kitty.conf ~/.config/tmux/tmux.conf
ps aux | egrep 'kitty$' | awk '{ print $2 }' | xargs kill -USR1
{{ end }}
